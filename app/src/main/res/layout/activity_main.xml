<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/tab1_selector"
            android:gravity="center"
            android:text="@string/main_tab_page1"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="@dimen/text_size_main"/>

        <RadioButton
            android:id="@+id/rb_tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab2_selector"
            android:gravity="center"
            android:text="@string/main_tab_page2"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="@dimen/text_size_main"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </LinearLayout>

        <RadioButton
            android:id="@+id/rb_tab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab3_selector"
            android:gravity="center"
            android:text="@string/main_tab_page3"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="@dimen/text_size_main"/>

        <RadioButton
            android:id="@+id/rb_tab4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab4_selector"
            android:gravity="center"
            android:text="@string/main_tab_page4"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="@dimen/text_size_main"/>
    </RadioGroup>

    <View
        android:id="@+id/view_line"
        style="@style/h_line"
        android:layout_above="@id/radiogroup"></View>

    <FrameLayout
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_line"></FrameLayout>


    <ImageView
        android:id="@+id/iv_center"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/tab_room"
        android:layout_marginBottom="8dp"/>
</RelativeLayout>
